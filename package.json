{
  "name": "business-hours-native",
  "version": "1.3.1",
  "description": "Native JavaScript business hour and schedule handler",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/istareatscreens/business-hours-native.git"
  },
  "bugs": {
    "url": "https://github.com/istareatscreens/bbusiness-hours-native/issues"
  },
  "types": "lib",
  "files": [
    "lib"
  ],
  "keywords": [
    "retail hours",
    "opening hours",
    "store hours",
    "business hours",
    "opening",
    "operation hours"
  ],
  "scripts": {
    "build": "tsc -p .",
    "lint": "eslint src/*.ts",
    "test": "nyc --reporter=html --reporter=text env TS_NODE_COMPILER_OPTIONS='{\"noImplicitAny\": false }' mocha -r ts-node/register test/**/*.ts",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "sideEffects": false,
  "author": "Stephen Charbonneau",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "5.0.0",
    "@types/mocha": "10.0.9",
    "@types/node": "20.17.0",
    "@typescript-eslint/eslint-plugin": "8.11.0",
    "@typescript-eslint/parser": "8.11.0",
    "chai": "5.1.2",
    "codecov": "3.8.3",
    "eslint": "9.13.0",
    "istanbul": "0.4.5",
    "mocha": "10.0.0",
    "mocha-lcov-reporter": "1.3.0",
    "nyc": "17.1.0",
    "prettier": "3.3.3",
    "sinon": "19.0.2",
    "source-map-support": "0.5.21",
    "ts-node": "10.8.2",
    "typescript": "5.6.3"
  },
  "dependencies": {}
}
